package evalg.doors.gen;

import java.util.ArrayList;

public class Gen {

	public int x;
	public int y;
	
	public Gen(int x, int y) {
		this.x = x;
		this.y = y;
	}
	
	public int findClosest(ArrayList<Gen> genList) {
		//return the index of the closest gen in genList
		int closestIdx = 0;
		Gen closest = genList.get(closestIdx);
		double closestDist = Math.sqrt(Math.pow(this.x-closest.x, 2)+Math.pow(this.y-closest.y, 2));//euclidean distance.
		for(int i = 1; i < genList.size(); i++) {
			double currentDist = Math.sqrt(Math.pow(this.x-genList.get(i).x, 2)+Math.pow(this.y-genList.get(i).y, 2));
			if(currentDist < closestDist) {
				closestDist = currentDist;
				closest = genList.get(i);
				closestIdx = i;
			}
		}
		return closestIdx;
	}
}
